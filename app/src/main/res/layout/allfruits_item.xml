<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
     android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/allfruits_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:padding="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="multiply"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/allfruits_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.001"
            app:srcCompat="@drawable/summer_mango" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/allfruits_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Fruit Name"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/allfruits_image"
                app:layout_constraintTop_toTopOf="@+id/allfruits_image"
                app:layout_constraintVertical_bias="0.211"
                tools:layout_editor_absoluteX="107dp" />

            <TextView
                android:id="@+id/allfruits_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/allfruits_name"
                app:layout_constraintStart_toStartOf="@+id/allfruits_name"
                tools:layout_editor_absoluteY="43dp" />

            <ImageView
                android:id="@+id/allfruits_favourite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:padding="10dp"
                android:src="@drawable/ic_favourite"></ImageView>
        </androidx.appcompat.widget.LinearLayoutCompat>

