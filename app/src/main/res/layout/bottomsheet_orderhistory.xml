<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oh_bsheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Order To :" />

    <TextView
        android:id="@+id/orderview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:text="TextView" />

    <TextView
        android:id="@+id/orderview_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderview_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/orderview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderview_address"
        android:text="TextView" />

    <TextView
        android:id="@+id/orderview_fruitlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderview_phone"
        android:layout_centerInParent="true"
        android:text="TextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderview_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderview_fruitlist" />


</RelativeLayout>