<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="409dp"

            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fruitview_image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/shimmer_color"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fruitview_name1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:background="@color/shimmer_color"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/cardView3"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"></TextView>

        <TextView
            android:id="@+id/fruitview_price1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@color/shimmer_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fruitview_name1"></TextView>

        <TextView
            android:id="@+id/fruitview_description11"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/shimmer_color"
            android:drawablePadding="5dp"
            android:fontFamily="@font/sanchez"
            android:textSize="19sp"
            android:layout_marginLeft="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.277"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fruitview_advatage1"></TextView>

        <TextView
            android:id="@+id/fruitview_advatage1"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@color/grey_font"
            android:drawablePadding="5dp"
            android:fontFamily="@font/sanchez"
            android:textSize="19sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fruitview_price1"
            app:layout_constraintTop_toBottomOf="@+id/fruitview_price1"></TextView>

        <TextView
            android:id="@+id/fruitview_description31"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sanchez"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="@+id/fruitview_description21"
            app:layout_constraintTop_toBottomOf="@+id/fruitview_description21"></TextView>

        <TextView
            android:id="@+id/fruitview_description41"
            android:layout_width="140dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:drawablePadding="5dp"
            android:fontFamily="@font/sanchez"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="@+id/fruitview_description31"
            app:layout_constraintTop_toBottomOf="@+id/fruitview_description31"></TextView>

        <TextView
            android:id="@+id/fruitview_description21"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/sanchez"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="@+id/fruitview_description11"
            app:layout_constraintTop_toBottomOf="@+id/fruitview_description11"></TextView>

        <ImageView
            android:id="@+id/fruiteview_favourite_view1"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/fruitview_description11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"
            android:background="@color/shimmer_color"/>

        <TextView
            android:id="@+id/fruitview_addtocart_btn1"
            android:layout_width="97dp"
            android:layout_height="45dp"
            android:background="@color/shimmer_color"
            android:backgroundTint="@color/shimmer_color"
            android:textColor="@color/shimmer_color"
            android:textSize="10dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cardView41"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/cardView41"></TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/fruitview_addtocart_btn1"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fruitview_add_btn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/shimmer_color"></ImageView>

                <TextView
                    android:id="@+id/fruitview_add_to_cart_num1"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@color/shimmer_color"
                    android:textSize="20dp"></TextView>

                <ImageView
                    android:id="@+id/fruitview_remove_btn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/shimmer_color"></ImageView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/grey_font"
            android:drawablePadding="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sanchez"
           android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>